@page "/Admin/Seasons/{seasonId}/Weeks/{weekId}/Scores"
@using BeaverLeague.Web.Components;
@model BeaverLeague.Web.Pages.Admin.Seasons.Weeks.ScoresModel
@{
    ViewData["Title"] = "Scores";
}

@(await Html.RenderComponentAsync<WeeklyScores>(RenderMode.Server))

@section scripts {
    <script>
        window.BeaverLeague = {
            Components: {
                WeeklyScores: {
                    weekId: function () {
                        return @Model.WeekID
                    }
                }
            }
        }

    </script>
    <script src="~/_framework/blazor.server.js"></script>
}

